{
    "name": "Ubuntu base with Ionic CLI latest",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers-contrib/features/ionic-cli": {
            "version": "latest"
        }
    },
    "postStartCommand": "npm install -g npm@latest",
    "customizations": {
        "vscode": {
            "extensions": [
                "github.copilot@prerelease",
                "github.copilot-chat@prerelease",
                "bierner.markdown-mermaid"
            ]
        }
    }
}
